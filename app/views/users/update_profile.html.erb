              <div class="container2">
                <h5>Update Your Profile</h5>
                <div class="row">
                  <%= form_tag("/users/update_profile", method: "post") do %>
                  <div class="col s12 m6">
                    <%if @user.first[:nickname].nil? || @user.first[:nickname].blank?%>
                    <div class="input-field">
                      <label class="control-label"> Nickname</label>
                      <input type="text" name="nickname" id="nickname" class="form-control">
                    </div>
                    <span id="status"></span>
                    <%else%>
                    <div class="input-field">
                      <label class="control-label"> Nickname</label>
                      <input type="text" name="nickname" class="form-control" value="<%=@user.first[:nickname]%>" disabled/>
                    </div>
                    <%end%>
                  </div>
                  <div class="col s12 m6">
                    <div class="input-field">
                      <label class="control-label"> Name </label>
                      <input type="text" name="name" class="form-control" value="<%=@user.first[:name]%>" />
                    </div>
                  </div>
                  <div class="col s12 m6">
                    <div class="input-field">
                      <label class="control-label"> Institition </label>
                      <input type="text" name="college" class="form-control" value="<%=@user.first[:college]%>" />
                    </div>
                  </div>
                  <div class="col s12 m6">
                    <div class="input-field">
                      <label class="control-label"> Specilization </label>
                      <input type="text" name="dept" class="form-control" value="<%=@user.first[:dept]%>" />
                    </div>
                  </div>
                  <span style="float: right; padding-top: 3.5vh;"><%=submit_tag "Update",class: "btn btn-success"%></span>
                  <%end%>
                </div>
              </div>
            </div>
          </div>