<% content_for :heading do %>
	RECursion
<% end %>

<div class="container2">
	<div class="row">
		<div class="col s12 m3">
			<div class="sidenav">
				<%= image_tag(User.find(current_user.id).image_url, size: '150x150', class:'circle',)%>
				<h4><%= @user.nickname %></h4>
				<h6><%= @user.name %></h6>
				<h6><%= @user.dept %></h6>
				<h6><%= @user.college %></h6>
				<h6>Rep: <%= @rep %></h6>
				<hr \>
			</div>
		</div>
		<div class="col s12 m9">
			<h5>Questions followed by <%=@user.nickname %></h5>
			<% @followed_question_ids.each do |q_id| %>
				<h6><%= link_to Question.find(q_id).title, question_path(q_id) %></h6>
			<% end %>

			<h5>Questions posted by <%=@user.nickname %></h5>
			<% @user.questions.each do |question| %>
				<h6><%= link_to question.title, question_path(question) %></h6>
			<% end %>

			<h5>Questions answered by <%=@user.nickname %></h5>
			<% @answered_question_ids.each do |q_id| %>
				<h6><%= link_to Question.find(q_id).title, question_path(q_id) %></h6>
			<% end %>

		</div>
	</div>
</div>
