<% content_for :heading do %>
	RECblog
<% end %>

<div class="row" style="height: 100%">

<p id="notice"><%= notice %></p>

  <% @posts.each do |post| %>

    <div class="blog-content">

      <% if post.verified? %>

        <div class="col s12 m6 l6">
          <div class="card">
            <div class="text-center">
                <h2><%= post.title %></h2>
                <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
                <h6>Liked by <%= post.likes.count %></h6>
            </div>
            <div class="card-content">
              <p><%= post.description.html_safe.truncate(358) %></p>

              <div class="text-center">
                <%= link_to "READ MORE", post_path(post), class: 'waves-effect waves-light btn' %>
              </div>
            </div>
          </div>
        </div>

      <% end %>

    </div>

  <% end %>

  <%= will_paginate @posts %>

</div>
